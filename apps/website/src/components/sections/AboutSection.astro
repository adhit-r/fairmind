---
import type { AboutSection } from '../../data/homepage';

interface Props {
  data: AboutSection;
}

const { data } = Astro.props;
---

<section class="py-20 bg-gray-50 relative overflow-hidden" aria-labelledby="about-title">
  <!-- Background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute -right-40 -top-40 w-80 h-80 bg-primary-50 rounded-full mix-blend-multiply filter blur-3xl opacity-30"></div>
    <div class="absolute -left-40 -bottom-40 w-80 h-80 bg-secondary-50 rounded-full mix-blend-multiply filter blur-3xl opacity-30"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 gap-12 items-center">
        <div class="text-center">
          <span class="inline-block px-4 py-2 text-sm font-medium text-primary-700 bg-primary-50 rounded-full mb-4">About Us</span>
          <h2 id="about-title" class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{data.title}</h2>
          <div class="prose prose-lg text-gray-600 max-w-none">
            <p>{data.description}</p>
          </div>
          <div class="mt-8 flex flex-wrap gap-4 justify-center">
            <a 
              href={data.ctaPrimary.href}
              class="inline-flex items-center justify-center px-8 py-3 text-base font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
            >
              {data.ctaPrimary.text}
            </a>
            <a 
              href={data.ctaSecondary.href}
              class="inline-flex items-center justify-center px-8 py-3 text-base font-semibold text-gray-700 bg-white border-2 border-gray-300 hover:bg-gray-50 rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
            >
              {data.ctaSecondary.text}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
