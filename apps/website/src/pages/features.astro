  {
    quarter: 'Q1 2024',
    title: 'MVP Development',
    features: [
      'Basic bias detection algorithms',
      'Simple dashboard interface',
      'Core API endpoints',
      'Documentation foundation'
    ],
    status: 'completed'
  },
  {
