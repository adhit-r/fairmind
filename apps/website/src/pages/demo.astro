const dashboardCategories = [
  {
    title: 'ANALYZE',
    description: 'BIAS DETECTION AND MODEL ANALYSIS',
    dashboards: ['BIAS DETECTION', 'MODEL EXPLAINABILITY', 'PERFORMANCE ANALYSIS']
  },
  {
    title: 'MONITOR',
    description: 'REAL-TIME MONITORING AND ALERTS',
    dashboards: ['REAL-TIME MONITORING', 'DRIFT DETECTION', 'SYSTEM HEALTH']
  },
  {
    title: 'EXPLAIN',
    description: 'MODEL INTERPRETABILITY AND TRANSPARENCY',
    dashboards: ['SHAP ANALYSIS', 'LIME EXPLANATIONS', 'FEATURE IMPORTANCE']
  },
  {
    title: 'GOVERN',
    description: 'COMPLIANCE AND RISK MANAGEMENT',
    dashboards: ['RISK ASSESSMENT', 'COMPLIANCE TRACKING', 'AUDIT LOGS']
  },
  {
    title: 'SIMULATE',
    description: 'MODEL TESTING AND VALIDATION',
    dashboards: ['SIMULATION INTERFACE', 'MODEL TESTING', 'VALIDATION RESULTS']
  },
  {
    title: 'MANAGE',
    description: 'MODEL AND DATA MANAGEMENT',
    dashboards: ['MODEL REGISTRY', 'DATA MANAGEMENT', 'VERSION CONTROL']
  }
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Fairmind AI Governance Platform Demo",
  "description": "Live demo of comprehensive AI governance platform with 22 specialized dashboards for bias detection, compliance tracking, and model management",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "url": "https://fairmind.xyz/demo"
};
---

<Layout 
  title="Live Demo - Fairmind AI Governance Platform | 22 Specialized Dashboards"
  description="Experience the most comprehensive AI governance platform with 22 specialized dashboards for bias detection, compliance tracking, and model management. Live demo with SHAP, LIME, and advanced bias detection capabilities."
  structuredData={structuredData}
>
  <!-- Hero Section -->
  <section class="bg-black text-yellow-400 py-24 border-b-2 border-yellow-400">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-black mb-6">
        <span class="block">LIVE DASHBOARD DEMO</span>
        <span class="text-yellow-400 bg-black px-4 py-2 transform rotate-1 inline-block shadow-[6px_6px_0px_0px_rgba(255,255,0,1)]">22 SPECIALIZED TOOLS</span>
        </h1>
        
      <p class="text-xl md:text-2xl text-yellow-400 max-w-4xl mx-auto font-bold mb-8">
