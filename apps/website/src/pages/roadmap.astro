---
import Layout from '../layouts/Layout.astro';

// Roadmap data
const roadmap = [
  {
    phase: 'Phase 1: Core Platform',
    status: 'Completed',
    items: [
      'Bias detection with demographic parity metrics',
      'SHAP and LIME explainability integration',
      'Basic model monitoring and drift detection',
      'Supabase authentication and user management',
      '22 specialized dashboard framework'
    ]
  },
  {
    phase: 'Phase 2: Advanced Analytics',
    status: 'In Progress',
    items: [
      'Neo4j Knowledge Graph integration',
      'Causal relationship analysis',
      'Model lineage tracking',
      'Advanced fairness metrics (equal opportunity, disparate impact)',
      'Real-time bias monitoring alerts'
    ]
  },
  {
    phase: 'Phase 3: Compliance & Governance',
    status: 'Planned',
    items: [
      'Automated compliance scoring',
      'Regulatory reporting templates',
      'Audit trail generation',
      'Multi-organization support',
      'API rate limiting and security'
    ]
  },
  {
    phase: 'Phase 4: Enterprise Features',
    status: 'Planned',
    items: [
      'Advanced model simulation tools',
      'Synthetic data generation with SDV',
      'Geographic bias detection',
      'Custom fairness metric definitions',
      'Integration with ML platforms (MLflow, Kubeflow)'
    ]
  }
];
---

<Layout title="Fairmind - Technical Roadmap">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-b from-gray-900 to-gray-800 text-white pt-16 sm:pt-20 md:pt-24 lg:pt-32 pb-12 sm:pb-16 md:pb-20 lg:pb-24">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -right-10 sm:-right-20 -top-10 sm:-top-20 w-48 sm:w-64 md:w-96 h-48 sm:h-64 md:h-96 bg-primary-500/10 rounded-full mix-blend-soft-light filter blur-3xl"></div>
      <div class="absolute -left-10 sm:-left-20 -bottom-10 sm:-bottom-20 w-48 sm:w-64 md:w-96 h-48 sm:h-64 md:h-96 bg-secondary-500/10 rounded-full mix-blend-soft-light filter blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-white mb-4 sm:mb-6">
          <span class="block">Technical Roadmap</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">Development Timeline</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-gray-300 mb-6 sm:mb-8 max-w-2xl mx-auto leading-relaxed">
          Open-source development roadmap for the Fairmind AI governance platform.
          Track our progress and upcoming features.
        </p>
      </div>
    </div>
  </section>

  <!-- Roadmap Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-gray-50 relative overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="space-y-12">
          {roadmap.map((phase, index) => (
            <div class="relative">
              <!-- Phase Header -->
              <div class="flex items-center mb-6">
                <div class={`w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg ${
                  phase.status === 'Completed' ? 'bg-green-500' :
                  phase.status === 'In Progress' ? 'bg-blue-500' : 'bg-gray-400'
                }`}>
                  {index + 1}
                </div>
                <div class="ml-4">
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900">{phase.phase}</h3>
                  <div class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                    phase.status === 'Completed' ? 'bg-green-100 text-green-800' :
                    phase.status === 'In Progress' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800'
                  }`}>
                    {phase.status}
                  </div>
                </div>
              </div>
              
              <!-- Phase Items -->
              <div class="ml-16">
                <ul class="space-y-3">
                  {phase.items.map((item) => (
                    <li class="flex items-start">
                      <svg class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Connector Line -->
              {index < roadmap.length - 1 && (
                <div class="absolute left-6 top-12 w-0.5 h-full bg-gray-300"></div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Current Status Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">Current Development Status</h2>
        <p class="text-lg sm:text-xl text-gray-600">Latest updates and technical achievements</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gray-50 rounded-xl p-6 sm:p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Recently Completed</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>22 specialized dashboard framework</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>SHAP and LIME explainability integration</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Basic bias detection metrics</span>
            </li>
          </ul>
        </div>
        
        <div class="bg-gray-50 rounded-xl p-6 sm:p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Currently Working On</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Neo4j Knowledge Graph integration</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Advanced fairness metrics</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Real-time monitoring system</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contributing Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-gray-900 text-white relative overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6">Contribute to Development</h2>
        <p class="text-lg sm:text-xl text-gray-300 mb-8">
          Fairmind is an open-source project. We welcome contributions from the community.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center btn-group">
          <a 
            href="https://github.com/fairmind-ai/fairmind" 
            target="_blank"
            class="btn btn-primary px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5"
          >
            View on GitHub
          </a>
          <a 
            href="/docs/contributing" 
            class="btn btn-outline-light px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-semibold border-2 border-white/20 hover:border-white/40 hover:bg-white/5 transition-all duration-300 transform hover:-translate-y-0.5"
          >
            Contributing Guide
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
