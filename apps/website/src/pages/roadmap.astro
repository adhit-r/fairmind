---
import Layout from '../layouts/Layout.astro';

// Roadmap data
const roadmap = [
  {
    phase: 'PHASE 1: CORE PLATFORM',
    status: 'COMPLETED',
    items: [
      'BIAS DETECTION WITH DEMOGRAPHIC PARITY METRICS',
      'SHAP AND LIME EXPLAINABILITY INTEGRATION',
      'BASIC MODEL MONITORING AND DRIFT DETECTION',
      'SUPABASE AUTHENTICATION AND USER MANAGEMENT',
      '22 SPECIALIZED DASHBOARD FRAMEWORK'
    ]
  },
  {
    phase: 'PHASE 2: ADVANCED ANALYTICS',
    status: 'IN PROGRESS',
    items: [
      'NEO4J KNOWLEDGE GRAPH INTEGRATION',
      'CAUSAL RELATIONSHIP ANALYSIS',
      'MODEL LINEAGE TRACKING',
      'ADVANCED FAIRNESS METRICS (EQUAL OPPORTUNITY, DISPARATE IMPACT)',
      'REAL-TIME BIAS MONITORING ALERTS'
    ]
  },
  {
    phase: 'PHASE 3: SECURITY & GUARDRAILS',
    status: 'PLANNED',
    items: [
      'GRYPE CONTAINER VULNERABILITY SCANNING',
      'GARAK LLM SECURITY TESTING FRAMEWORK',
      'NEMO AI SAFETY GUARDRAILS INTEGRATION',
      'ADVERSARIAL ROBUSTNESS TESTING',
      'AI SYSTEM VULNERABILITY ASSESSMENT',
      'SECURITY COMPLIANCE SCORING (OWASP AI)',
      'THREAT MODELING FOR AI SYSTEMS',
      'SECURE MODEL DEPLOYMENT PIPELINES'
    ]
  },
  {
    phase: 'PHASE 4: ENTERPRISE FEATURES',
    status: 'PLANNED',
    items: [
      'ADVANCED MODEL SIMULATION TOOLS',
      'SYNTHETIC DATA GENERATION WITH SDV',
      'GEOGRAPHIC BIAS DETECTION',
      'CUSTOM FAIRNESS METRIC DEFINITIONS',
      'INTEGRATION WITH ML PLATFORMS (MLFLOW, KUBEFLOW)',
      'MULTI-TENANT ARCHITECTURE',
      'ENTERPRISE SSO INTEGRATION',
      'ADVANCED AUDIT LOGGING AND COMPLIANCE'
    ]
  }
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Technical Roadmap - Fairmind AI Governance Platform",
  "description": "Open-source development roadmap for the Fairmind AI governance platform. Track our progress and upcoming features.",
  "url": "https://fairmind.xyz/roadmap"
};
---

<Layout 
  title="Technical Roadmap - Fairmind AI Governance Platform | Development Timeline"
  description="Open-source development roadmap for the Fairmind AI governance platform. Track our progress and upcoming features for bias detection, compliance tracking, and model management."
  structuredData={structuredData}
>
  <!-- Hero Section -->
  <section class="bg-black text-yellow-400 py-24 border-b-2 border-yellow-400">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-black mb-6">
        <span class="block">TECHNICAL ROADMAP</span>
        <span class="text-yellow-400 bg-black px-4 py-2 transform rotate-1 inline-block shadow-[6px_6px_0px_0px_rgba(255,255,0,1)]">DEVELOPMENT TIMELINE</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-yellow-400 max-w-4xl mx-auto font-bold">
        OPEN-SOURCE DEVELOPMENT ROADMAP FOR THE FAIRMIND AI GOVERNANCE PLATFORM. TRACK OUR PROGRESS AND UPCOMING FEATURES.
      </p>
    </div>
  </section>

  <!-- Roadmap Section -->
  <section class="py-20 bg-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {roadmap.map((phase, index) => (
          <div class="relative">
            <!-- Phase Header -->
            <div class="flex items-center mb-8">
              <div class={`w-16 h-16 rounded-none border-2 border-black flex items-center justify-center text-black font-black text-xl shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] ${
                phase.status === 'COMPLETED' ? 'bg-green-400' :
                phase.status === 'IN PROGRESS' ? 'bg-yellow-400' : 'bg-gray-400'
              }`}>
                {index + 1}
              </div>
              <div class="ml-6">
                <h3 class="text-2xl font-black text-yellow-400 mb-2">{phase.phase}</h3>
                <div class={`inline-flex items-center px-4 py-2 rounded-none text-sm font-black border-2 border-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] ${
                  phase.status === 'COMPLETED' ? 'bg-green-400 text-black' :
                  phase.status === 'IN PROGRESS' ? 'bg-yellow-400 text-black' : 'bg-gray-400 text-black'
                }`}>
                  {phase.status}
                </div>
              </div>
            </div>
            
            <!-- Phase Items -->
            <div class="ml-22">
              <ul class="space-y-4">
                {phase.items.map((item) => (
                  <li class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-yellow-400 font-bold">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-black border-t-2 border-yellow-400">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-black text-yellow-400 mb-6">READY TO JOIN THE JOURNEY?</h2>
      <p class="text-xl text-yellow-400 mb-8 font-bold">
        BE PART OF BUILDING THE MOST COMPREHENSIVE AI GOVERNANCE PLATFORM FOR RESPONSIBLE AI DEVELOPMENT.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="/demo" class="inline-flex items-center px-8 py-4 bg-yellow-400 text-black font-black rounded-none border-2 border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transform hover:-translate-y-2 transition-all">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          TRY DEMO
        </a>
        <a href="/contact" class="inline-flex items-center px-8 py-4 border-2 border-yellow-400 text-yellow-400 font-black rounded-none hover:bg-yellow-400 hover:text-black transition-all shadow-[4px_4px_0px_0px_rgba(255,255,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(255,255,0,1)]">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          CONTACT US
        </a>
      </div>
    </div>
  </section>
</Layout>
